<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-xs-12 col-sm-6">
    <h2>booking page</h2>
      <%= simple_form_for(@booking) do |f| %>
      <%= f.input :category %>
      <%= f.input :status %>
      <%= f.input :room_id %>
      <%= f.input :worker_id %>
      <%= f.input :client_id %>
      <%= f.submit 'Save', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
