<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
    <h2>Room.number</h2>
    </div>
  <div class="col-xs-12 col-sm-6">
  <h2>Booking</h2>
  <%= simple_form_for @client do |c| %>
    <%= c.simple_fields_for :booking do |b| %>
      <div class="row">
        <div class="col-xs-12 col-sm-6 ">
          <%= c.input :first_name %>
        </div>
        <div class="col-xs-12 col-sm-6">
          <%= c.input :last_name %>
        </div>
      </div>
        <%= c.input :email %>
        <%= c.input :social_number %>
        <%= b.input :category, collection: Booking::CATEGORIES %>
        <%= b.collection_check_boxes :worker_id, Worker.all, :id, :first_name %>
        <%= c.submit "create", class: "btn btn-primary" %>
    <% end %>
  <% end %>
  </div>

    <div class="col-xs-12 col-sm-6">
      <h1>Amenity list</h1>
      <% @amenities.each do |amenity| %>
        <li><%= amenity.drink %></li>
      <% end %>
    </div>
  </div>
    <%= render "menu_items/menu_item" %>

</div>
